<h2>Offers</h2>

<table class="offers-table">
  <thead>
    <th>Book</th>
    <th>Availability</th>
    <th></th>
  </thead>
  <tbody>
    {{#each @model as |offer|}}
      <tr>
        <td>{{offer.book.title}}</td>
        <td>{{offer.availability}}</td>
        <td>
          {{#if offer.isInStock}}
            <button type="button" {{on "click" (fn this.markOutOfStock offer)}}>Mark as out of stock</button>
          {{else}}
            <button type="button" {{on "click" (fn this.markInStock offer)}}>Mark as in stock</button>
          {{/if}}
        </td>
      </tr>
    {{else}}
      <tr><td colspan="2">No offers</td></tr>
    {{/each}}
  </tbody>
</table>

{{outlet}}